{
    "manifest_version": 2,
    "name": "RingSurf Lite",
    "version": "1.0",

    "description": "An extension to making browsing webrings easier. It allows you to navigate to various webring's /random page with a simple click.",
    "homepage_url": "https://github.com/kronsby/ringsurf-lite",
    "icons": {
        "48": "icons/ringsurf2-48.png",
        "96": "icons/ringsurf2-96.png"
    },

    "permissions": [
        "activeTab",
        "storage"
    ],

    "browser_action": {
        "default_icon": "icons/ringsurf2-32.png",
        "default_title": "RingSurf"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    }
}